#!/bin/bash

# git clone git@github.com:alols/xcape.git
setxkbmap -option 'caps:ctrl_modifier'
setxkbmap -option 'shift:both_capslock'
xcape -e 'Caps_Lock=Escape'

# mapping for the logitech bluetooth mouse
mouse_id=$(xinput | grep 'Bluetooth Mouse M336/M337/M535.*pointer' | sed 's/^.*id=\([0-9]*\)[ \t].*$/\1/')
xinput set-button-map $mouse_id 1 2 3 4 5 6 7 6 7 10 11 12

# other keymaps
xmodmap ~/.Xmodmap || \
notify-send -t 3000 -u low -i ~/.files/images/keyboard_grey.svg "Key Mapping Failed !!" ""
