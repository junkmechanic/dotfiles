source! /home/ankur/.vimperatorrc.local

" vim: set ft=vimperator:

let mapleader=','

nnoremap : ;
nnoremap ; :

nnoremap j 5j
nnoremap k 5k

nnoremap <Leader>q :xall<CR>
nnoremap <leader>e :tabclose<CR>
nnoremap x :tabclose<CR>
nnoremap X :undo<CR>

nnoremap <leader>R :restart<CR>

nnoremap d <C-d>
nnoremap u <C-u>

nnoremap J :tabprevious<CR>
nnoremap K :tabnext<CR>
nnoremap <leader>n :tabprevious<CR>
nnoremap <leader>m :tabnext<CR>
nnoremap <C-n> :nohlsearch<CR>

nnoremap yt :tabduplicate<CR>

colorscheme darkness

set editor=~/bin/run_vim

set hintchars=hjklasdfgyuiopqwertnmzxcvb

highlight Hint font-family: Sans; font-size: 12px; font-weight: bold; color: yellow; background-color: rgba(0, 0, 0, 0.5); border: solid 1px LightGray;
