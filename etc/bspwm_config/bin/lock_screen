#!/bin/bash
scrot /tmp/screen.png
# USER_IMAGE=~/pictures/neural_artist.jpg
convert /tmp/screen.png -blur 0x5 /tmp/screen.png
[[ -f $USER_IMAGE ]] && convert /tmp/screen.png $USER_IMAGE -gravity center -composite -matte /tmp/screen.png
# Pause if playing
# if [ "$(playerctl status)" = "Playing"  ] ; then
#   playerctl pause
# fi
i3lock -e -i /tmp/screen.png
# i3lock -u -i /tmp/screen.png
# systemctl suspend
rm /tmp/screen.png
