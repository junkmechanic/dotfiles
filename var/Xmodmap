! Microsoft Sculpt Ergonomic Desktop Mouse Windows Button mapped to media
! playback
keycode 134 = XF86AudioPlay

! Scult keyboard Menu key remapped to Super key
keycode 135 = Super_L

! Remove Caps Lock and map the key to Ctrl
! This is now done with setxkbmap in autostart
! remove Lock = Caps_Lock
! remove Control = Control_L
! keysym Caps_Lock = Control_L
! add Control = Control_L
